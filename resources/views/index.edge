		<script>

		$(function(){
			$('.img-uploader').click(function(e) {
				$('#file-upload').click()
			})

			$('#exporting').click(function() {

			if(window.WebGLRenderingContext) {
				$('#exporting').text('please wait...').attr('disabled', 'disabled')
				html2canvas(document.querySelector(".bg-wrapper")).then( function(canvas) {
					download(canvas.toDataURL(), "wonder-of-praise.png", "image/png")
					$('#exporting').text('Export Image').removeAttr('disabled')
				});
			}
			else {
				alert('Sorry, Your browser is not supported !!');
			}

		})

			$('#file-upload').change(function() {
				var reader = new FileReader();
				reader.onload = function(e) {
					var preview = document.getElementById('img-holder1');
					preview.src = e.target.result;
					preview.style.maxWidth = '300px';
					preview.style.maxHeight = '300px';
				}
				reader.readAsDataURL(this.files[0]);
			})

